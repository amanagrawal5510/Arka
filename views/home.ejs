<%- include("partials/header")-%>

<header id="home" class="header-dark"  >
    <nav class="navbar navbar-dark navbar-expand-lg navigation-clean-search">
        <div class="container">
            <img class="rounded-circle icon" src="assets/img/icon.jpg" >
            <a class="navbar-brand" href="#home">Arka</a>
            <button data-toggle="collapse" class="navbar-toggler" data-target="#navcol-1">
                <span class="sr-only">Toggle navigation</span>
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navcol-1">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="#article">Article</a>
                    </li>
                </ul>
                <a class="nav-link" href="members">Members</a>
                <a class="nav-link" href="events.html" >Events</a>
                <form class="form-inline mr-auto" target="_self">
                    <div class="form-group" style="border-radius: 0;border-width: 1px;">
                        <label for="search-field"></label>
                    </div>
                </form>
            </div>
        </div>
    </nav>
  
    <div  class="container hero ">
        <div class="row">
            <div class="col-md-8 offset-md-2">
                <h1 class="text-center" id="about">About</h1>
                <p id="aboutpara" class="text-center text-sm-center text-md-center text-lg-center text-xl-center text-white">
                    <br><%= aboutDescription %>
                    <br>
                </p>
            </div>
        </div>
    </div>
</header>
    <section id="article" class="article-list" >
        <div class="container">
            
            <div class="intro">
                <h2 class="text-center">Arka Facts </h2>
                <p class="text-center">For More Facts    <a class="action" href="articles"><i class="fa fa-arrow-circle-right"></i></a></p>
                
            </div>
            <div class="row articles index">
                
                <% articlelist.slice(0, 3).forEach(function(item){%>
                    <div class="col-sm-6 col-md-4 item">
                        
                        <div class="simple-slider">
                            <div class="swiper-container">
                                <div class="swiper-wrapper imageslider">
                                    <% imageslist.forEach(function(image){%> 
                                        <% if(image.title == item.title ) { %>
                                    <div class="swiper-slide">
                                        <img src="data:<%= image.contentType %>;base64,<%= image.imageBase64 %>" width="100%" height="100%">
                                    </div>
                                        <% } %>
                                    <% })%>
                                </div>
                                <div class="swiper-pagination"></div>
                                <div class="swiper-button-prev"></div>
                                <div class="swiper-button-next"></div>
                            </div>
                        </div>
                        <h3 class="name"><%= item.title %><br><br></h3>
                        <p class="description"><%= item.descrition.substring(0, 200) + "..." %>&nbsp;
                        <a href="/<%= item.title %>" >Read More</a>
                        <br></p>
                        
                        
                    </div>
                    <% })%>
                
            </div>
        </div>
    </section>
